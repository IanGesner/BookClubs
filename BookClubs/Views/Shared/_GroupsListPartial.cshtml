@model IEnumerable<BookClubs.Models.ViewModels.GroupListItemViewModel>

<table class="table">
    <tr class="link-row">
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupState)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CurrentBookTitle)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.MemberCount)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="link-row">
            <td>
                @Html.ActionLink(item.GroupName, "Details", "Groups", new { id = item.Id }, new { @class = "group" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupState)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CurrentBookTitle)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.MemberCount)
            </td>
        </tr>
    }

</table>
