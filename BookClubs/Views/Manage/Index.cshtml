@model BookClubs.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>


    @{ /*TODO: Use a horizontal button group instead of this vertical layout*/ }

